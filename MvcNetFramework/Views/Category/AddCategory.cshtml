@model EntityLayer.Concrete.Category

@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h1>yeni category ekleme sayfası</h1>
<hr />
@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori Adı ");
        @Html.TextBoxFor(c => c.CategoryName);
        @Html.ValidationMessageFor(c => c.CategoryName)
        <br /><br />
        @Html.Label("Açıklama ");
        @Html.TextBoxFor(c => c.CategoryDescription);
        @Html.ValidationMessageFor(c => c.CategoryDescription)
        <br /><br />
        <button>kaydet</button>
    </div>
}


